{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "paths": {
      "@src": ["./*"],
      "@dto": ["./dto"],
      "@example": ["./example"],
      "@interface": ["./interfaces"]
    },
  }
}