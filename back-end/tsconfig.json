{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": false,
    "inlineSourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,

    "paths": {
      "applications": ["./applications"],
      "common": ["./common"],
      "middlewares": ["./middlewares"],
      "utils": ["./utils"],
      "guards": ["./guards"],
      "entities": ["./entities"]
    }
  },
  "include": ["src/**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "**/*.spec.ts", "/src/logger", "dist"]
}
